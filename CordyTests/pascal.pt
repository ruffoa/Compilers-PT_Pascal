// Pascal's triangle 
mod main (output) {
    let mut pascal : [int:15];
    let mut col : int,
        mut row : int;

    fn addto (index : int) {
        if index == 1 { 
            pascal [1] = pascal [1] + 1;
	} else {
	    pascal [index] = pascal [index] + pascal [index - 1];
	}
    }

    // initialize the array  
    pascal [1] = 1;
    col = 2;
    loop {
        pascal [col] = 0;
        col += 1;
        break if col > 15;
    }

    print (1:5); println();

    row = 2;
    loop {
        // calculate a new row 
        col = row;
        while col => 1 {
            addto (col);
            col -= 1;
        }

        // print this row 
        col = 1;
        while col <= row {
            print (pascal [col] : 5);
            col += 1;
        }
        println();

        row += 1;
        break if row > 15;
    }
}
